<% content_for :title, "Nouveau vélo - Admin" %>

<div class="admin-page">
  <div class="page-header-admin">
    <h1><%= @velo.new_record? ? "➕ Nouveau vélo" : "✏️ Éditer le vélo" %></h1>
  </div>
  
  <%= form_with(model: [:admin, @velo], local: true, class: "admin-form") do |f| %>
    <% if @velo.errors.any? %>
      <div class="form-errors">
        <h3><%= pluralize(@velo.errors.count, "erreur") %> à corriger :</h3>
        <ul>
          <% @velo.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    
    <div class="form-group">
      <%= f.label :nom, "Nom du vélo *" %>
      <%= f.text_field :nom, required: true, placeholder: "Ex: VTT Sport Pro" %>
    </div>
    
    <div class="form-group">
      <%= f.label :type_velo, "Type de vélo *" %>
      <%= f.select :type_velo, Velo::TYPES, { prompt: "Sélectionnez un type" }, { required: true } %>
    </div>
    
    <div class="form-group">
      <%= f.label :description, "Description *" %>
      <%= f.text_area :description, rows: 5, required: true, 
          placeholder: "Décrivez les caractéristiques du vélo..." %>
    </div>
    
    <div class="form-row">
      <div class="form-group">
        <%= f.label :tarif_heure, "Tarif horaire (€) *" %>
        <%= f.number_field :tarif_heure, step: 0.01, required: true, placeholder: "5.00" %>
      </div>
      
      <div class="form-group">
        <%= f.label :tarif_jour, "Tarif journalier (€) *" %>
        <%= f.number_field :tarif_jour, step: 0.01, required: true, placeholder: "25.00" %>
      </div>
    </div>
    
    <div class="form-group">
      <label class="checkbox-label">
        <%= f.check_box :disponible %>
        <%= f.label :disponible, "Disponible à la location" %>
      </label>
    </div>
    
    <div class="form-actions">
      <%= f.submit @velo.new_record? ? "Créer le vélo" : "Mettre à jour", class: "btn btn-primary" %>
      <%= link_to "Annuler", admin_velos_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
